<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="antonio.femxa.appfinal.MainActivity"
    android:background="@drawable/pantallainicio"
    android:gravity="bottom" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:background="@color/md_theme_primary"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:id="@+id/botonjugar"
            android:onClick="aJugar"
            >
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:src="@drawable/inicial_jugar"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0px"
                android:text="JUGAR"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/md_theme_primary"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:id="@+id/botonsonido"
            android:onClick="aJugar"
            >
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:src="@drawable/inicia_sonido"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0px"
                android:text="SONIDO ON"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/md_theme_primary"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:id="@+id/botoncreditos"
            android:onClick="abrirCreditos"
            >
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:src="@drawable/inicial_creditos"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="0px"
                android:text="CRÃ‰DITOS"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

