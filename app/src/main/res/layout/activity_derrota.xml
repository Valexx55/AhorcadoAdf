<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_derrota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DerrotaActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/imagenDerrota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- Texto "La palabra era:" -->
    <TextView
        android:id="@+id/text_palabra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La palabra era:"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_palabra_oculta"
        android:layout_marginBottom="38dp" />

    <!-- Texto con la palabra oculta -->
    <TextView
        android:id="@+id/text_palabra_oculta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Palabra Oculta"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/seccionbotones"
        android:layout_marginBottom="38dp" />

    <!-- NUEVO BLOQUE DE BOTONES EN REJILLA 2x2 -->
    <GridLayout
        android:id="@+id/seccionbotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Fila 1: INICIO -->
        <LinearLayout
            android:id="@+id/boton_derrota_inicio"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/fondo_botones_fin"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_home_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="INICIO"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Fila 1: MÁS INFO -->
        <LinearLayout
            android:id="@+id/boton_mas_info"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/fondo_botones_fin"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_info_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="+ INFO"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Fila 2: AL AZAR -->
        <LinearLayout
            android:id="@+id/botonAzar"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/fondo_botones_fin"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_autorenew_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="AL AZAR"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Fila 2: ESTADÍSTICAS -->
        <LinearLayout
            android:id="@+id/boton_estadisticas"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/fondo_botones_fin"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_bar_chart_4_bars_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="ESTADÍSTICAS"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

    </GridLayout>
</RelativeLayout>
