<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_derrota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DerrotaActivity"
    >
    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/imagenDerrota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <!-- Texto "La palabra era:" -->
    <TextView
        android:id="@+id/text_palabra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La palabra era:"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_palabra_oculta"
        android:layout_marginBottom="38dp"
        />

    <!-- Texto con la palabra oculta, justo encima de los botones -->
    <TextView
        android:id="@+id/text_palabra_oculta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Palabra Oculta"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/seccionbotones"
        android:layout_marginBottom="38dp" />


    <!-- Botón "Más Info" -->
   <!-- <Button
        android:id="@+id/boton_mas_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Más Info"
        android:textAlignment="center"
        android:layout_above="@id/boton_derrota_inicio"
        android:layout_marginBottom="20dp"/>
    <Button
        android:text="Inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/boton_derrota_inicio"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"/>
-->

    <LinearLayout
        android:id="@+id/seccionbotones"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/boton_derrota_inicio"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_botones_fin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_home_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="INICIO"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boton_mas_info"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_botones_fin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_info_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="+ INFO"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonAzar"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/fondo_botones_fin"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:paddingTop="4dp"
                android:src="@drawable/outline_autorenew_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="AL AZAR"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
